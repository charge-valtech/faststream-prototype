<script>

  $(function () {
    startCountdown();

    function startCountdown() {
      var counter = 4;
      id = setInterval(function() {
        counter--;
        if(counter < 0) {
          $('#record').trigger('click');
          $('#thinkingText').text('Your answer is now recording');
          clearInterval(id);
        } else {
            $('#timeCountdown').text(counter.toString());
        }
      }, 1000);
    }
  });
</script>